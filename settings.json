    "deny": [
      "Bash(git add --all:*)",
      "Bash(git add --force:*)",
      "Bash(git add -A:*)",
      "Bash(git add -f:*)",
      "Bash(git commit -a:*)",
      "Bash(git reset --hard:*)",
      "Bash(npm i --global:*)",
      "Bash(npm i -g:*)",
      "Bash(npm install --global:*)",
      "Bash(npm install -g:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run serve:*)",
      "Bash(npm run start &)",
      "Bash(npm run start:*)",
      "Bash(rm -rf:*)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git worktree remove --force:*)",
      "Bash(op)",
      "Bash(op:*)",
      "Bash(open:*)",
      "Bash(rm -rf:*)",
      "Edit(*CLAUDE.local.md)",
      "Edit(*CLAUDE.md)",
      "MultiEdit(*CLAUDE.local.md)",
      "MultiEdit(*CLAUDE.md)",
      "Read(./build/**)",
      "Read(./node_modules/**)",
      "Write(*CLAUDE.local.md)",
      "Write(*CLAUDE.md)"
    ]
  },
  "enabledMcpjsonServers": [
    "brave-search"
  ],
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if [ \"$NOTIFICATIONS\" = \"true\" ]; then woof \"Claude: $(basename $(pwd))\"; else echo \"NOTIFICATIONS=$NOTIFICATIONS (not woofing)\"; fi"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh",
    "padding": 0
  }
}
