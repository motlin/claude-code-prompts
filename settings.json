{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 99999,
  "env": {
    "CLAUDE_CODE_ENABLE_TASKS": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "MultiEdit",
      "Read",
      "Search",
      "WebSearch",
      "Write",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh api:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git mv:*)",
      "Bash(git rebase:*)",
      "Bash(git remote:*)",
      "Bash(git rev-parse:*)",
      "Bash(git revert:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(just:*)",
      "Bash(ln:*)",
      "Bash(ls:*)",
      "Bash(mise:*)",
      "Bash(mkdir:*)",
      "Bash(mvn:*)",
      "Bash(mvnd:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(osascript:*)",
      "Bash(pmset:*)",
      "Bash(python3:*)",
      "Bash(rm:*)",
      "Bash(sqlite3:*)",
      "Bash(wrangler:*)",
      "Skill(build:*)",
      "Skill(code:*)",
      "Skill(conversation-style)",
      "Skill(example-skills:*)",
      "Skill(git:*)",
      "Skill(java:*)",
      "Skill(justfile:*)",
      "Skill(llm-context)",
      "Skill(markdown-tasks:*)",
      "Skill(orchestration:*)",
      "Skill(plugin-dev:skill-development)",
      "Skill(precommit)",
      "Skill(testing)",
      "SlashCommand(/build:*)",
      "SlashCommand(/git:*)",
      "SlashCommand(/git:commit)",
      "SlashCommand(/markdown-tasks:*)",
      "WebFetch(domain:adoptium.net)",
      "WebFetch(domain:api.anthropic.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:api.pushover.net)",
      "WebFetch(domain:avalon.onl)",
      "WebFetch(domain:beta.workflowy.com)",
      "WebFetch(domain:biomejs.dev)",
      "WebFetch(domain:blog.cloudflare.com)",
      "WebFetch(domain:central.sonatype.org)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:community.hetzner.com)",
      "WebFetch(domain:community.render.com)",
      "WebFetch(domain:dash.cloudflare.com)",
      "WebFetch(domain:developer.1password.com)",
      "WebFetch(domain:developer.jboss.org)",
      "WebFetch(domain:developers.cloudflare.com)",
      "WebFetch(domain:docs.datasette.io)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:docs.hetzner.com)",
      "WebFetch(domain:docs.openrewrite.org)",
      "WebFetch(domain:docs.render.com)",
      "WebFetch(domain:docs.rwsdk.com)",
      "WebFetch(domain:docs.sentry.io)",
      "WebFetch(domain:docusaurus.io)",
      "WebFetch(domain:domains.cloudflare.com)",
      "WebFetch(domain:error-prone.picnic.tech)",
      "WebFetch(domain:errorprone.info)",
      "WebFetch(domain:formulae.brew.sh)",
      "WebFetch(domain:giscus.app)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:issues.apache.org)",
      "WebFetch(domain:iterm2.com)",
      "WebFetch(domain:javadoc.io)",
      "WebFetch(domain:junit-pioneer.org)",
      "WebFetch(domain:liftwizard.io)",
      "WebFetch(domain:mavenplugins.github.io)",
      "WebFetch(domain:mcp.sentry.dev)",
      "WebFetch(domain:mvnrepository.com)",
      "WebFetch(domain:oclif.io)",
      "WebFetch(domain:orm.drizzle.team)",
      "WebFetch(domain:patch-diff.githubusercontent.com)",
      "WebFetch(domain:platform.claude.com)",
      "WebFetch(domain:prettier.io)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:registry.npmjs.org)",
      "WebFetch(domain:render.com)",
      "WebFetch(domain:repo.maven.apache.org)",
      "WebFetch(domain:repo1.maven.org)",
      "WebFetch(domain:sentry.io)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:tanstack.com)",
      "WebFetch(domain:taskwarrior.org)",
      "WebFetch(domain:vite.dev)",
      "WebFetch(domain:workflowy.com)",
      "WebFetch(domain:www.apache.org)",
      "WebFetch(domain:www.dropwizard.io)",
      "WebFetch(domain:www.eclipse.org)",
      "WebFetch(domain:www.hetzner.com)",
      "WebFetch(domain:www.npmjs.com)",
      "WebFetch(domain:www.prisma.io)",
      "mcp__chrome-devtools__*",
      "mcp__plugin_context7_context7__*",
      "mcp__plugin_serena_serena__*",
      "mcp__render__*",
      "mcp__sentry__*",
      "mcp__serena__*"
    ],
    "deny": [
      "Bash(git add --all:*)",
      "Bash(git add --force:*)",
      "Bash(git add -A:*)",
      "Bash(git add -f:*)",
      "Bash(git commit -a:*)",
      "Bash(git push:*)",
      "Bash(git reset --hard:*)",
      "Bash(git worktree remove --force:*)",
      "Bash(npm i --global:*)",
      "Bash(npm i -g:*)",
      "Bash(npm install --global:*)",
      "Bash(npm install -g:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run serve:*)",
      "Bash(npm run start &)",
      "Bash(npm run start:*)",
      "Bash(op)",
      "Bash(op:*)",
      "Bash(open:*)",
      "Bash(rm -rf:*)",
      "Bash(rm -fr:*)",
      "Bash(rm -r -f:*)",
      "Bash(rm -f -r:*)"
    ],
    "ask": [
      "Edit(CLAUDE.md)",
      "Edit(~/.claude/settings.json)",
      "MultiEdit(CLAUDE.md)",
      "MultiEdit(~/.claude/settings.json)",
      "Write(CLAUDE.md)"
    ],
    "defaultMode": "acceptEdits"
  },
  "enabledMcpjsonServers": [
    "brave-search"
  ],
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if [ \"$NOTIFICATIONS\" = \"true\" ]; then woof \"Claude: $(basename $(pwd))\"; else echo \"NOTIFICATIONS=$NOTIFICATIONS (not woofing)\"; fi"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "markdown-tasks@motlin-claude-code-plugins": true,
    "build@motlin-claude-code-plugins": true,
    "code@motlin-claude-code-plugins": true,
    "git@motlin-claude-code-plugins": true,
    "github@motlin-claude-code-plugins": true,
    "iterm2-titles@motlin-claude-code-plugins": true,
    "java@motlin-claude-code-plugins": true,
    "justfile@motlin-claude-code-plugins": true,
    "offline-claude-code-guide@motlin-claude-code-plugins": true,
    "orchestration@motlin-claude-code-plugins": true,
    "tmux-titles@motlin-claude-code-plugins": true,
    "agent-sdk-dev@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "firebase@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "learning-output-style@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "sentry@claude-plugins-official": true,
    "serena@claude-plugins-official": true,
    "supabase@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "pushover@motlin-claude-code-plugins": true
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": true
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "latest",
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "Giving you up",
      "Letting you down",
      "Running around",
      "Deserting you",
      "Making you cry",
      "Saying goodbye",
      "Telling a lie",
      "Hurting you"
    ]
  }
}
