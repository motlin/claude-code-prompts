      "Bash(npm i -g:*)",
      "Bash(npm install --global:*)",
      "Bash(npm install -g:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run serve:*)",
      "Bash(npm run start &)",
      "Bash(npm run start:*)",
