      "Bash(just test)",
      "Bash(just typecheck)",
      "Bash(ls:*)",
      "Bash(mise install:*)",
      "Bash(mise ls-remote:*)",
      "Bash(mise ls:*)",
      "Bash(mise tasks:*)",
      "Bash(mkdir:*)",
      "Bash(mktemp:*)",
      "Bash(mv:*)",
      "Bash(mvn checkstyle:check:*)",
      "Bash(mvn dependency:get:*)",
      "Bash(mvn dependency:tree:*)",
      "Bash(mvn test:*)",
      "Bash(node --version)",
      "Bash(npm --version)",
      "Bash(npm info:*)",
      "Bash(npm install:*)",
      "Bash(npm ls:*)",
      "Bash(npm remove:*)",
      "Bash(npm run build)",
      "Bash(npm run build:*)",
      "Bash(npm run ci:eslint:*)",
