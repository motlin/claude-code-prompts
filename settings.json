      "Bash(npm run precommit:*)",
      "Bash(npm run route:generate)",
      "Bash(npm run test)",
      "Bash(npm run test:*)",
      "Bash(npm run test:run:*)",
      "Bash(npm run tsc:*)",
      "Bash(npm run type-check:*)",
      "Bash(npm run typecheck)",
      "Bash(npm run typecheck:*)",
      "Bash(npm run)",
      "Bash(npm test)",
      "Bash(npm test:*)",
      "Bash(npm uninstall:*)",
      "Bash(npm update:*)",
