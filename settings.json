{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 99999,
  "env": {
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "MultiEdit",
      "Read",
      "Search",
      "WebSearch",
      "Write",
      "Skill(build:precommit)",
      "Skill(code:cli)",
      "Skill(code:code-quality)",
      "Skill(code:testing)",
      "Skill(git:git-workflow)",
      "Skill(java:pom-ordering)",
      "Skill(justfile:justfile-style)",
      "Skill(markdown-tasks:tasks)",
      "Skill(orchestration:conversation-style)",
      "Skill(orchestration:orchestration)",
      "Skill(orchestration:llm-context)",
      "SlashCommand(/build:fix)",
      "SlashCommand(/git:commit-chunks)",
      "SlashCommand(/git:commit)",
      "SlashCommand(/git:conflicts)",
      "SlashCommand(/git:rebase-all)",
      "SlashCommand(/markdown-tasks:add-one-task:*)",
      "SlashCommand(/markdown-tasks:do-all-tasks)",
      "WebFetch(domain:api.anthropic.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:api.pushover.net)",
      "WebFetch(domain:biomejs.dev)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:developer.1password.com)",
      "WebFetch(domain:developers.cloudflare.com)",
      "WebFetch(domain:docs.datasette.io)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:docs.openrewrite.org)",
      "WebFetch(domain:docs.sentry.io)",
      "WebFetch(domain:docusaurus.io)",
      "WebFetch(domain:giscus.app)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:javadoc.io)",
      "WebFetch(domain:liftwizard.io)",
      "WebFetch(domain:mcp.sentry.dev)",
      "WebFetch(domain:oclif.io)",
      "WebFetch(domain:orm.drizzle.team)",
      "WebFetch(domain:platform.claude.com)",
      "WebFetch(domain:prettier.io)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:registry.npmjs.org)",
      "WebFetch(domain:repo1.maven.org)",
      "WebFetch(domain:sentry.io)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:tanstack.com)",
      "WebFetch(domain:taskwarrior.org)",
      "WebFetch(domain:vite.dev)",
      "WebFetch(domain:www.npmjs.com)",
      "mcp__context7__get-library-docs",
      "mcp__context7__resolve-library-id",
      "mcp__sentry__find_issues",
      "mcp__sentry__find_organizations",
      "mcp__sentry__find_projects",
      "mcp__sentry__get_issue_details",
      "mcp__sentry__search_events",
      "mcp__sentry__search_issues",
      "mcp__serena__check_onboarding_performed",
      "mcp__serena__find_file",
      "mcp__serena__find_referencing_symbols",
      "mcp__serena__find_symbol",
      "mcp__serena__get_symbols_overview",
      "mcp__serena__initial_instructions",
      "mcp__serena__insert_after_symbol",
      "mcp__serena__list_dir",
      "mcp__serena__list_memories",
      "mcp__serena__replace_symbol_body",
      "mcp__serena__search_for_pattern"
    ],
    "deny": [
      "Bash(git add --all:*)",
      "Bash(git add --force:*)",
      "Bash(git add -A:*)",
      "Bash(git add -f:*)",
      "Bash(git commit -a:*)",
      "Bash(git push:*)",
      "Bash(git reset --hard:*)",
      "Bash(git worktree remove --force:*)",
      "Bash(npm i --global:*)",
      "Bash(npm i -g:*)",
      "Bash(npm install --global:*)",
      "Bash(npm install -g:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run serve:*)",
      "Bash(npm run start &)",
      "Bash(npm run start:*)",
      "Bash(op)",
      "Bash(op:*)",
      "Bash(rm -rf:*)",
      "Edit(CLAUDE.md)",
      "Edit(~/.claude/settings.json)",
      "MultiEdit(CLAUDE.md)",
      "MultiEdit(~/.claude/settings.json)",
      "Write(CLAUDE.md)"
    ],
    "ask": [
      "Bash(open:*)"
    ]
  },
  "model": "opus",
  "enabledMcpjsonServers": [
    "brave-search"
  ],
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if [ \"$NOTIFICATIONS\" = \"true\" ]; then woof \"Claude: $(basename $(pwd))\"; else echo \"NOTIFICATIONS=$NOTIFICATIONS (not woofing)\"; fi"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "markdown-tasks@motlin-claude-code-plugins": true,
    "build@motlin-claude-code-plugins": true,
    "code@motlin-claude-code-plugins": true,
    "git@motlin-claude-code-plugins": true,
    "github@motlin-claude-code-plugins": true,
    "iterm2-titles@motlin-claude-code-plugins": true,
    "java@motlin-claude-code-plugins": true,
    "justfile@motlin-claude-code-plugins": true,
    "orchestration@motlin-claude-code-plugins": true,
    "tmux-titles@motlin-claude-code-plugins": true,
    "pr-review-toolkit@claude-code-plugins": false,
    "commit-commands@claude-code-plugins": false,
    "feature-dev@claude-code-plugins": false,
    "agent-sdk-dev@claude-code-plugins": true,
    "example-skills@anthropic-agent-skills": true,
    "offline-claude-code-guide@motlin-claude-code-plugins": true
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": true
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true
}
